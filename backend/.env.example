# APEX Backend Environment Configuration
# Copy this file to .env and update values

# 
APP_NAME=APEX Financial OS

# 
APP_VERSION=1.0.0

# development|staging|production
ENVIRONMENT=development

# Enable debug mode
DEBUG=true

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# External API base URL
API_BASE_URL=http://localhost:8000

# Allowed CORS origins
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# 
CORS_ALLOW_CREDENTIALS=true

# 
CORS_ALLOW_METHODS=["*"]

# 
CORS_ALLOW_HEADERS=["*"]

# PostgreSQL connection URL
DATABASE_URL=postgresql+asyncpg://apex_user:apex_password@localhost:5432/apex_db

# Database connection pool size
DB_POOL_SIZE=10

# Max overflow connections
DB_MAX_OVERFLOW=20

# Redis connection URL for pub/sub and caching
REDIS_URL=redis://localhost:6379

# Enable Redis (fallback to in-memory if disabled)
REDIS_ENABLED=true

# Secret key for JWT token signing
JWT_SECRET_KEY=CHANGEME_insecure_dev_secret_key_replace_in_production

# 
JWT_ALGORITHM=HS256

# Access token expiry
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiry
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 
PASSWORD_MIN_LENGTH=8

# 
PASSWORD_REQUIRE_SPECIAL=true

# OpenRouter API key for LLM access
OPENROUTER_API_KEY=

# 
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default LLM model for agents
DEFAULT_LLM_MODEL=nvidia/llama-3.1-nemotron-70b-instruct

# Alpaca API key
ALPACA_API_KEY=

# Alpaca secret key
ALPACA_SECRET_KEY=

# Alpaca API base URL (paper or live)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Use paper trading (safer default)
ALPACA_PAPER_TRADING=true

# Plaid client ID
PLAID_CLIENT_ID=None

# Plaid secret
PLAID_SECRET=None

# Plaid environment: sandbox|development|production
PLAID_ENVIRONMENT=sandbox

# Enable Plaid integration (uses mock if disabled)
PLAID_ENABLED=false

# ChromaDB persistence directory
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# ChromaDB collection name
CHROMA_COLLECTION_NAME=apex_financial_knowledge

# Enable voice input/output
VOICE_ENABLED=false

# Whisper model size
VOICE_MODEL=base

# Max voice commands per minute
VOICE_RATE_LIMIT=10

# Logging level
LOG_LEVEL=INFO

# Log format: json|text
LOG_FORMAT=json

# Log file path (None = stdout only)
LOG_FILE=None

# Default timeout for agent operations
AGENT_TIMEOUT_SECONDS=30

# Maximum debate rounds between agents
DEBATE_MAX_ROUNDS=3

# Consensus threshold (0-1) for agent decisions
CONSENSUS_THRESHOLD=0.7

# Enable GPU acceleration (requires CUDA)
ENABLE_GPU=false

# GPU device ID
GPU_DEVICE_ID=0

# Enable market crash simulation features
ENABLE_CRASH_SIMULATOR=true

# Enable subscription detection in transactions
ENABLE_SUBSCRIPTION_DETECTION=true

