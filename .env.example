# APEX Platform Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Backend Configuration
# ===================

# Server Settings
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0
FORCE_HTTPS=false
FRONTEND_URL=http://localhost:5173

# Security (REQUIRED - Change these!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-credentials-base64-encoded

# ===================
# Trading & Market Data APIs
# ===================

# Alpaca Trading API (https://alpaca.markets)
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for testing

# ===================
# AI/LLM APIs
# ===================

# OpenAI API (https://platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# NVIDIA AI (via OpenRouter - optional)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here

# ===================
# Personal Finance Integration (Optional)
# ===================

# Plaid API (https://plaid.com)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox  # sandbox, development, or production

# ===================
# Caching & State Management
# ===================

# Redis (Optional - for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===================
# AI Agent Configuration
# ===================

# Default AI Models
DEFAULT_AI_MODEL=gpt-4
FALLBACK_AI_MODEL=gpt-3.5-turbo

# Agent Behavior
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
AGENT_TIMEOUT_SECONDS=30

# ===================
# Voice Features (Optional)
# ===================
VOICE_ENABLED=false
WHISPER_MODEL=base  # tiny, base, small, medium, large

# ===================
# RAG System
# ===================
CHROMA_PERSIST_DIRECTORY=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_FILE=./logs/apex.log

# ===================
# Feature Flags
# ===================
ENABLE_WAR_ROOM=true
ENABLE_VOICE_COMMANDS=false
ENABLE_PLAID_INTEGRATION=false
ENABLE_CRASH_SIMULATOR=true

# ===================
# Development Settings
# ===================
ELECTRON_START_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
