# ============================================================================
# APEX Demo Environment Configuration
# ============================================================================
# Copy this file to .env for local development
# cp .env.example .env

# ============================================================================
# BACKEND Configuration
# ============================================================================

# Database (SQLite for demo - no setup required)
BACKEND_DATABASE_URL=sqlite+aiosqlite:///./data/apex_demo.db

# Redis (optional - will use in-memory fallback if unavailable)
BACKEND_REDIS_URL=redis://localhost:6379
BACKEND_REDIS_ENABLED=false

# Security
BACKEND_JWT_SECRET_KEY=demo_secret_key_change_in_production_min_32_chars
BACKEND_ENVIRONMENT=development
BACKEND_DEBUG=true

# API Server
BACKEND_API_HOST=0.0.0.0
BACKEND_API_PORT=8000
BACKEND_API_BASE_URL=http://localhost:8000

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ============================================================================
# AI/LLM Configuration (with mock fallback)
# ============================================================================

# OpenRouter API - OPTIONAL (uses mock responses if not set)
# Get your key at: https://openrouter.ai/keys
BACKEND_OPENROUTER_API_KEY=mock_disabled
BACKEND_DEFAULT_LLM_MODEL=nvidia/llama-3.1-nemotron-70b-instruct

# ============================================================================
# Trading API Configuration (with mock fallback)
# ============================================================================

# Alpaca Trading - OPTIONAL (uses mock trades if not set)
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
BACKEND_ALPACA_API_KEY=mock_disabled
BACKEND_ALPACA_SECRET_KEY=mock_disabled
BACKEND_ALPACA_PAPER_TRADING=true
BACKEND_ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# Banking API Configuration (with mock fallback)
# ============================================================================

# Plaid - OPTIONAL (uses mock data if not set)
BACKEND_PLAID_CLIENT_ID=mock_disabled
BACKEND_PLAID_SECRET=mock_disabled
BACKEND_PLAID_ENVIRONMENT=sandbox
BACKEND_PLAID_ENABLED=false

# ============================================================================
# Feature Flags
# ============================================================================

BACKEND_ENABLE_GPU=false
BACKEND_ENABLE_CRASH_SIMULATOR=true
BACKEND_ENABLE_SUBSCRIPTION_DETECTION=true
BACKEND_VOICE_ENABLED=false

# ============================================================================
# FRONTEND Configuration
# ============================================================================

# Backend API URL
VITE_API_BASE_URL=http://localhost:8000

# Feature Flags (optional)
VITE_ENABLE_VOICE=false
VITE_ENABLE_CRASH_SIMULATOR=true

# ============================================================================
# Development Tools
# ============================================================================

# Logging
BACKEND_LOG_LEVEL=INFO
BACKEND_LOG_FORMAT=text

# Demo mode (uses mock data for all external APIs)
DEMO_MODE=true
