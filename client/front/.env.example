# APEX Frontend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Backend API Configuration
# ===================

# Backend API URLs (RECOMMENDED: Use backend proxy for all API calls)
VITE_BACKEND_URL=http://localhost:8000
VITE_BACKEND_WS_URL=ws://localhost:8000

# ===================
# Direct API Integration (Optional - Not Recommended for Production)
# ===================
# NOTE: For production, proxy all API calls through the backend for security
# These direct integrations are only for development/testing

# Alpaca Markets (https://app.alpaca.markets/paper/dashboard/overview)
VITE_ALPACA_API_KEY=your_alpaca_api_key_here
VITE_ALPACA_SECRET_KEY=your_alpaca_secret_key_here
VITE_ALPACA_PAPER=true
VITE_ALPACA_BASE_URL=https://paper-api.alpaca.markets
VITE_ALPACA_DATA_BASE_URL=https://data.alpaca.markets

# OpenAI API (https://platform.openai.com/api-keys)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ===================
# Feature Flags
# ===================
VITE_ENABLE_VOICE=false
VITE_ENABLE_DEV_TOOLS=true
VITE_USE_BACKEND_PROXY=true  # Recommended: true for production
