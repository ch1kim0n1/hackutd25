{
  "name": "electron-react-vite-starter",
  "version": "1.0.0",
  "description": "Minimal Electron + React (Vite) starter",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"cd front && vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder"
  },
  "build": {
    "appId": "com.example.electronreactvite",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.2.0"
    }
}
